<?xml version="1.0" encoding="utf-8" ?>
<services version="1.0" xmlns:deploy="vespa" xmlns:preprocess="properties">
    <container id="default" version="1.0">
        <document-api/>
        <search>
            <searcher id="com.e_commerce_pet_project.search.UkrSearcher" bundle="ranking" />
        </search>
        <nodes>
            <node hostalias="MyServer" />
        </nodes>
    </container>

    <content id="my_content_container" version="1.0">
        <redundancy>1</redundancy>
        <documents>
            <document type="product" mode="index" />
        </documents>
        <nodes>
            <node hostalias="MyServer1" distribution-key="0" />
        </nodes>
    </content>
</services>

